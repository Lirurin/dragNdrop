body
  margin: 0
  padding: 0
  min-height 100vh

.droppable
  height 200px
  width 200px
  border 1px double #000000
  margin 0 auto
  box-shadow: 0 0 0 0 #000 inset
  transition 0.3s box-shadow ease
  
.hovered
  box-shadow: 0 0 10px 2px #000 inset
  transition 0.3s box-shadow ease

.bricks__text
  text-align center

.bricks
  width 80px
  height 40px
  &__cont
    display flex
    flex-direction: column
    justify-content: center
    width 100%
    height 100%
    background-color: #c36a6a
    text-align: center
    text-transform: uppercase
    pointer-events: none
