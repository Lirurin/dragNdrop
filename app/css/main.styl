html 
  background-color: #000000

body
  margin: 0
  padding: 0
  min-height 100vh

.bricks
  padding-top: 15px

.bricks__text
  color #ffffff
  text-align center

.bricks__droppable
  height 200px
  width 200px
  border 1px double #ffffff
  margin 0 auto
  background: url('/img/delivery.svg') center center no-repeat
  background-size: 40%
  color #ffffff
  box-shadow: 0 0 0 0 #ffffff inset
  transition 0.3s box-shadow ease
  
.hovered
  box-shadow: 0 0 10px 2px #ffffff inset
  transition 0.3s box-shadow ease

.bricks__block
  width 80px
  height 40px

.bricks__cont
  display flex
  flex-direction: column
  justify-content: center
  width 100%
  height 100%
  background-color: #c36a6a
  text-align: center
  text-transform: uppercase
  pointer-events: none

.bricks__pile
  display flex
  justify-content: center
  min-height: 80px
  margin-top: 40px

.building
  display flex
  justify-content center
  margin 60px auto

.building
  svg
    width 300px
    height 300px
    path 
      fill #000000
      stroke none